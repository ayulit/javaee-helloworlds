<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>
	
		<!-- DATABASE CONNECTION SETTINGS -->
		
		<!-- we use driver from PostgreSQL dependency -->
		<property name="connection.driver_class">org.postgresql.Driver</property>
				
		<!-- Assume 'hibernatedb' is the database name -->
		<property name="connection.url">jdbc:postgresql://localhost:5429/tomato</property>		
		<property name="connection.username">username</property>
		<property name="connection.password">password</property>
		
		<!-- OTHER SETTINGS -->		
		
		<!-- JDBC connection pool (use the build-in) -->
		<property name="connection.pool_size">1</property>
		
		<!-- SQL dialect: hibernate should know what type of language is needed to use to talk to DB  -->	
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>		
		
		<!-- Disable the second-level cache: will be revealed later ... -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		
		<!-- Echo all executed SQL to stdout: useful feature while learning! -->
		<property name="show_sql">true</property>
		
		<!-- Drop and re-create the database schema on startup,
		-create: every time
		-update: if ONLY model changed!-->
		<property name="hbm2ddl.auto">create</property>
		
		<!-- Names the annotated entity class: what is model -->
		<mapping class="com.basepack.model.UserDetails"/>
	
	</session-factory>

</hibernate-configuration>